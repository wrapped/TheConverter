<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".TempFragment">

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/input_top"
                android:layout_gravity="center"
                android:hint="@string/celsius">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etCelsius"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minWidth="@dimen/input_minWidth"
                    android:digits="0123456789-."
                    android:textSize="@dimen/input_textSize"
                    android:textAlignment="center"/>

            </com.google.android.material.textfield.TextInputLayout>


            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/input_2nd"
                android:layout_gravity="center"
                android:hint="@string/fahrenheit">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etFahrenheit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minWidth="@dimen/input_minWidth"
                    android:digits="0123456789-."
                    android:textSize="@dimen/input_textSize"
                    android:textAlignment="center"/>

            </com.google.android.material.textfield.TextInputLayout>
</LinearLayout>